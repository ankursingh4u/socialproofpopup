// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

// Social Proof Popups Models

enum PopupPosition {
  BOTTOM_LEFT
  BOTTOM_RIGHT
  TOP_LEFT
  TOP_RIGHT
}

model Shop {
  id           Int            @id @default(autoincrement())
  shopDomain   String         @unique
  accessToken  String
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  settings     Settings?
  recentOrders RecentOrder[]
  productStats ProductStats[]
}

model Settings {
  id              Int           @id @default(autoincrement())
  shopId          Int           @unique
  shop            Shop          @relation(fields: [shopId], references: [id], onDelete: Cascade)
  popupEnabled    Boolean       @default(true)
  counterEnabled  Boolean       @default(true)
  demoMode        Boolean       @default(true)
  popupPosition   PopupPosition @default(BOTTOM_LEFT)
  popupDelay      Int           @default(5)
  displayDuration Int           @default(4)
  showOnPages     String        @default("[\"product\",\"collection\",\"home\",\"cart\"]")
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model RecentOrder {
  id           Int      @id @default(autoincrement())
  shopId       Int
  shop         Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  orderId      String
  productTitle String
  productImage String
  city         String
  country      String
  createdAt    DateTime @default(now())

  @@index([shopId])
}

model ProductStats {
  id             Int       @id @default(autoincrement())
  shopId         Int
  shop           Shop      @relation(fields: [shopId], references: [id], onDelete: Cascade)
  productId      String
  purchaseCount  Int       @default(0)
  lastPurchaseAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([shopId, productId])
  @@index([shopId])
}
